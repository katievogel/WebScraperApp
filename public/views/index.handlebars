<div class="container">
    <div class="jumbotron">
        <h1>Web Scraper App</h1>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="card" style="width: 400px;">
            <div class="card-body">
                <h5 class="card-title">Articles to Read</h5>
                <ul class="list-group">
                    {{#each articles}}
                    <span>{{id}} - {{title}}</span><button value={{this.id}} type="submit"
                        class="btn btn-success read-button">Read</button>
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>
</div>
</div>